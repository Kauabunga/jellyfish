{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist/lib",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "src/uitoolkit-app",
    "src/uitoolkit-app/main.browser.ts",
    "src/uitoolkit-app/polyfills.browser.ts",
    "src/uitoolkit-app/vendor.browser.ts",
    "src/uitoolkit-app/rxjs.ts",
    "features",
    "scripts",
    "test",
    "dist",
    "src/**/*.spec.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
